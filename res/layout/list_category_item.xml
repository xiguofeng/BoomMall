<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_item_ll"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:orientation="vertical"
    android:paddingLeft="8dip"
    android:paddingRight="8dip" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg_gray"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="8dip"
        android:paddingRight="8dip" >

        <ImageView
            android:id="@+id/category_item_select_iv"
            android:layout_width="8dip"
            android:layout_height="match_parent"
            android:src="@color/red_title_bg"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/category_item_icon_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/add"
            android:visibility="gone" />

        <TextView
            android:id="@+id/category_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="8dip"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/black_character"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

</LinearLayout>