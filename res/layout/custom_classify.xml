<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.plmt.boommall"
    android:id="@+id/custom_classify_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/custom_classify_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/userinfo_dialog_bg" />

        <TextView
            android:id="@+id/custom_classify_second_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="心脑..."
            android:textColor="@color/red"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/custom_classify_first_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dip"
            android:layout_toLeftOf="@+id/custom_classify_second_name_tv"
            android:text="营养"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <com.plmt.boommall.ui.view.HorizontalListView
        android:id="@+id/custom_classify_goods_lv"
        android:layout_width="fill_parent"
        android:layout_height="100dip" />

</LinearLayout>