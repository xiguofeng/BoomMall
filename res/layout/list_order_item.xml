<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/red_title_bg" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" >

        <TextView
            android:id="@+id/list_order_group_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/list_order_group_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/list_order_group_id_tv"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/micro_text_size" />

        <TextView
            android:id="@+id/list_order_group_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:textColor="@color/red_character"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dip"
        android:layout_marginTop="3dip"
        android:background="@drawable/h_line"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_order_group_wine_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_order_group_total_money_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="5dip"
        android:padding="5dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/list_order_group_total_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/list_order_group_total_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red_character"
            android:textSize="@dimen/middle_text_size" />
        
         <TextView
            android:id="@+id/list_order_group_total_freight_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:visibility="gone"
            android:textSize="@dimen/micro_text_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="8dip"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/list_order_group_continue_pay_btn"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/corners_bg_orange"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/order_continue_pay"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/micro_text_size" />

        <Button
            android:id="@+id/list_order_group_comment_or_cancel_btn"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/corners_bg_orange"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/order_cancel"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/micro_text_size" />

        <Button
            android:id="@+id/list_order_group_see_btn"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/corners_bg_orange"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/order_state"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/micro_text_size" />
    </LinearLayout>

</LinearLayout>