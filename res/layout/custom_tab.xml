<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/tab_height"
    android:layout_alignParentBottom="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tab_inner_height"
        android:layout_gravity="bottom"
        android:background="@color/white_tab_bg"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <FrameLayout
            android:id="@+id/home_main_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_main_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/tab_main_normal" />

            <TextView
                android:id="@+id/tab_home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="首页"
                android:visibility="gone"
                android:textColor="#0aca4e"
                android:textSize="10.0dip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_category_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_marginRight="10.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_category_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/tab_category_normal" />

            <TextView
                android:id="@+id/tab_bang_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="分类"
                android:visibility="gone"
                android:textSize="10.0dip" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />

        <FrameLayout
            android:id="@+id/home_cart_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_marginLeft="10.0dip"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_cart_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/tab_cart_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="@string/shopping_cart"
                android:visibility="gone"
                android:textSize="10.0dip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/home_person_fl"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_child_height"
            android:layout_weight="1.0" >

            <ImageView
                android:id="@+id/home_person_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5.0dip"
                android:src="@drawable/tab_person_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginBottom="2.0dip"
                android:text="@string/my"
                android:visibility="gone"
                android:textSize="10.0dip" />
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="3dip"
        android:layout_weight="1.0" >

        <ImageView
            android:layout_width="56dip"
            android:layout_height="56dip"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/tab_middle_logo" />
    </FrameLayout>

</FrameLayout>