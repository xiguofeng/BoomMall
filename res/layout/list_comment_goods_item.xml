<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@color/white" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:paddingBottom="5dip"
        android:paddingTop="5dip" >

        <ImageView
            android:id="@+id/comment_goods_iv"
            android:layout_width="66dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/comment_goods_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/comment_goods_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dip"
                android:textColor="@color/gray_character"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/comment_goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="6dip"
            android:layout_toLeftOf="@+id/comment_goods_right_ll"
            android:layout_toRightOf="@+id/comment_goods_iv" >

            <TextView
                android:id="@+id/comment_goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:maxLines="3"
                android:textColor="@color/black"
                android:textSize="@dimen/micro_text_size" />

            <TextView
                android:id="@+id/comment_goods_weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/micro_text_size" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/comment_goods_btn_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="5dip"
        android:layout_marginTop="5dip"
        android:background="@color/white"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/comment_goods_continue_pay_btn"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/corners_bg_red"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/order_continue_pay"
            android:textColor="@color/black_character_title"
            android:textSize="@dimen/micro_text_size"
            android:visibility="gone" />

        <Button
            android:id="@+id/comment_goods_comment_btn"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/corners_bg_red"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/add_comment"
            android:textColor="@color/black_character_title"
            android:textSize="@dimen/micro_text_size" />

        <Button
            android:id="@+id/comment_goods_see_btn"
            android:layout_width="80dip"
            android:layout_height="32dip"
            android:layout_marginRight="10dip"
            android:background="@drawable/corners_bg_red"
            android:gravity="center"
            android:paddingBottom="8dip"
            android:paddingTop="8dip"
            android:text="@string/order_state"
            android:textColor="@color/black_character_title"
            android:textSize="@dimen/micro_text_size"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>