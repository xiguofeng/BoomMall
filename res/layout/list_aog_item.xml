<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/list_aog_goods_iv"
            android:layout_width="60dip"
            android:layout_height="81dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip" />
        
        <ImageView
            android:id="@+id/list_aog_del_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:padding="15dip"
            android:src="@drawable/ic_delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/list_aog_del_iv"
            android:layout_toRightOf="@+id/list_aog_goods_iv">

            <TextView
                android:id="@+id/list_aog_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:singleLine="true"
                android:textColor="@color/gray_character"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/list_aog_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:singleLine="true"
                android:textColor="@color/gray_character"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>