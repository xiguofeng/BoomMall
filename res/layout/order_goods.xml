<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@color/white" >
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_goods_iv"
            android:layout_width="66dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:id="@+id/order_goods_right_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/order_goods_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/gray_character"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/order_goods_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/order_goods_num_tv"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dip"
                android:textColor="@color/black"
                android:textSize="@dimen/middle_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="10dip"
            android:layout_toLeftOf="@+id/order_goods_right_ll"
            android:layout_toRightOf="@+id/order_goods_iv" >

            <TextView
                android:id="@+id/order_goods_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textColor="@color/black"
                android:textSize="@dimen/micro_text_size" />

            <TextView
                android:id="@+id/order_goods_weight_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@color/orange_text"
                android:textSize="@dimen/micro_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>