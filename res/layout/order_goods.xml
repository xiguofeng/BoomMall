<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_goods_iv"
            android:layout_width="66dip"
            android:layout_height="80dip"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dip"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/order_goods_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_toRightOf="@+id/order_goods_iv"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/small_text_size" />
        
        <TextView
            android:id="@+id/order_goods_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/order_goods_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dip"
            android:layout_toLeftOf="@+id/order_goods_price_tv"
            android:textColor="@color/gray_character"
            android:textSize="@dimen/small_text_size" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="2dip"
        android:layout_marginBottom="2dip"
        android:background="@drawable/h_line"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>